{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0",
  "default_locale": "en",
  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "icon_nuke_16.png",
    "128": "icon_nuke_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file:///*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "nuke": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Nuke the element under the cursor"
    },
    "unnuke": {
      "suggested_key": {
        "default": "Alt+Shift+Z"
      },
      "description": "Unnuke the last hidden element"
    }
  }
}